@page
@model stonks.Pages.SendMessageModel
@{
}

<div class="col">
    <div class="text-center pt-4 middle">
        <h1 class="display-4">Submit a post</h1>
    </div>

    <div class="py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-8 col-xl-8">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mt-md-4">

                            <h2 class="font-weight-bold mb-5 "></h2>


                            <form method="post">

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group mb-3">
                                    <input asp-for="Input.Title" class="form-control" placeholder="Title">
                                    
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="Input.Recipient" class="form-control" placeholder="Recipient"/>
                                </div>

                                <div class="form-group mb-5">
                                    <textarea asp-for="Input.Text" class="form-control" rows="10"></textarea>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn px-5 btn-outline-light btn-lg">Submit</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}