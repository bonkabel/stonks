@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<Models.User> SignInManager
@inject UserManager<Models.User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    
    <li class="nav-item pr-2">
            <a class="nav-link text-white" href="/User/@this.User.FindFirst(ClaimTypes.NameIdentifier).Value" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="d-flex align-items-center justify-content-start nav-item pr-3">
        <a class="d-flex align-items-center justify-content-center" href="/Messages/MESSAGES">
            <i class="buttonIcon fa-regular fa-envelope fa-2x"></i>
        </a>
    </li>
    <li class="d-flex align-items-center justify-content-start nav-item pr-1">
            <a class="d-flex align-items-center justify-content-center" asp-area="Identity" asp-page="/Account/Manage/Index">
            <i class="buttonIcon fa fa-cog fa-2x" aria-hidden="true"></i>
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
